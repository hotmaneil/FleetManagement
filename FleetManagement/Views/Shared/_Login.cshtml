<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>卡車幫車隊管理系統網站</title>

    <!--facebook設定-->
    <meta property="og:url" content="#" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="zh_TW" />
    <meta property="og:title" content="卡車幫車隊管理系統網站" />
    <meta property="og:description" content="提供合迪管理卡車幫系統" />
    <meta property="og:image" content="縮圖的連結位置" />
    <!--Twitter卡數據-->

    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="publisher_handle">
    <meta name="twitter:title" content="Page Title">
    <meta name="twitter:description" content="頁面描述少於200個字符">
    <meta name="twitter:creator" content="author_handle">

    <!--Twitter摘要卡圖片必須至少為120x120px-->
    <meta name="twitter:image" content="http//www.example.com/image.jpg">
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/login.min.css" rel="stylesheet" type="text/css"/>
</head>

<body>
    <div>
        <div class="ui centered stackable grid">
            <div class="twelve wide column maincolumn">
                <div class="ui two column centered stackable grid">
                    <div class="row mobile reversed tablet reversed">
                        <div id="LoginForm" class="column">
                            <div class="ui basic segment">
                                @RenderBody()
                            </div>
                        </div>
                        <div id="LogoDiv" class="column">
                            <div class="ui basic segment">
                                <div class="logoTitle">你卡厲害的好朋友</div>
                                <img src="~/Content/images/assets/logo.svg" alt="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer>
            <div class="ui center aligned grid">
                <div class="sixteen wide column">
                    <div class="ui basic segment center aligned">
                        <h2 class="ui header">
                            <img src="~/Content/images/Icon/CompanyLogo.JPG" alt="合迪股份有限公司Logo" class="ui circular image" />
                            合迪股份有限公司
                        </h2>
                    </div>
                </div>
            </div>
        </footer>
    </div>


    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

    </body>
</html>
